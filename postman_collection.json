    {
      "name": "Blog Posts (Firestore)",
      "item": [
        {
          "name": "Get All Blog Posts",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{firebaseIdToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"structuredQuery\": {\n    \"from\": [{\n      \"collectionId\": \"blogPosts\"\n    }],\n    \"where\": {\n      \"fieldFilter\": {\n        \"field\": {\n          \"fieldPath\": \"isPublished\"\n        },\n        \"op\": \"EQUAL\",\n        \"value\": {\n          \"booleanValue\": true\n        }\n      }\n    },\n    \"orderBy\": [{\n      \"field\": {\n        \"fieldPath\": \"publishedAt\"\n      },\n      \"direction\": \"DESCENDING\"\n    }]\n  }\n}"
            },
            "url": {
              "raw": "https://firestore.googleapis.com/v1/projects/{{firebaseProjectId}}/databases/(default)/documents:runQuery",
              "protocol": "https",
              "host": ["firestore", "googleapis", "com"],
              "path": ["v1", "projects", "{{firebaseProjectId}}", "databases", "(default)", "documents:runQuery"]
            },
            "description": "Firestore REST API ile tüm yayınlanmış blog post'ları getirir. Firestore security rules'a göre authenticated olman gerekebilir."
          },
          "response": []
        },
        {
          "name": "Get Blog Post by Slug",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{firebaseIdToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"structuredQuery\": {\n    \"from\": [{\n      \"collectionId\": \"blogPosts\"\n    }],\n    \"where\": {\n      \"fieldFilter\": {\n        \"field\": {\n          \"fieldPath\": \"slug\"\n        },\n        \"op\": \"EQUAL\",\n        \"value\": {\n          \"stringValue\": \"example-post-slug\"\n        }\n      }\n    },\n    \"limit\": 1\n  }\n}"
            },
            "url": {
              "raw": "https://firestore.googleapis.com/v1/projects/{{firebaseProjectId}}/databases/(default)/documents:runQuery",
              "protocol": "https",
              "host": ["firestore", "googleapis", "com"],
              "path": ["v1", "projects", "{{firebaseProjectId}}", "databases", "(default)", "documents:runQuery"]
            },
            "description": "Slug'a göre blog post getirir. Body'deki 'stringValue' değerini değiştir."
          },
          "response": []
        },
        {
          "name": "Create Blog Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{firebaseIdToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fields\": {\n    \"title\": {\n      \"stringValue\": \"Test Blog Post\"\n    },\n    \"slug\": {\n      \"stringValue\": \"test-blog-post\"\n    },\n    \"content\": {\n      \"stringValue\": \"This is a test blog post content.\"\n    },\n    \"excerpt\": {\n      \"stringValue\": \"Test excerpt\"\n    },\n    \"category\": {\n      \"stringValue\": \"Technology\"\n    },\n    \"tags\": {\n      \"arrayValue\": {\n        \"values\": [\n          {\"stringValue\": \"test\"},\n          {\"stringValue\": \"blog\"}\n        ]\n      }\n    },\n    \"isPublished\": {\n      \"booleanValue\": false\n    },\n    \"author\": {\n      \"mapValue\": {\n        \"fields\": {\n          \"id\": {\"stringValue\": \"{{userId}}\"},\n          \"name\": {\"stringValue\": \"Test User\"}\n        }\n      }\n    },\n    \"publishedAt\": {\n      \"timestampValue\": \"2024-01-01T00:00:00Z\"\n    },\n    \"createdAt\": {\n      \"timestampValue\": \"2024-01-01T00:00:00Z\"\n    },\n    \"updatedAt\": {\n      \"timestampValue\": \"2024-01-01T00:00:00Z\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "https://firestore.googleapis.com/v1/projects/{{firebaseProjectId}}/databases/(default)/documents/blogPosts",
              "protocol": "https",
              "host": ["firestore", "googleapis", "com"],
              "path": ["v1", "projects", "{{firebaseProjectId}}", "databases", "(default)", "documents", "blogPosts"],
              "description": "Yeni blog post oluşturur. Firestore security rules'a göre authenticated olman ve gerekli alanları doldurman gerekir."
            }
          },
          "response": []
        },
        {
          "name": "Update Blog Post",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{firebaseIdToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fields\": {\n    \"title\": {\n      \"stringValue\": \"Updated Blog Post\"\n    },\n    \"content\": {\n      \"stringValue\": \"Updated content\"\n    },\n    \"isPublished\": {\n      \"booleanValue\": true\n    },\n    \"updatedAt\": {\n      \"timestampValue\": \"2024-01-01T00:00:00Z\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "https://firestore.googleapis.com/v1/projects/{{firebaseProjectId}}/databases/(default)/documents/blogPosts/:postId",
              "protocol": "https",
              "host": ["firestore", "googleapis", "com"],
              "path": ["v1", "projects", "{{firebaseProjectId}}", "databases", "(default)", "documents", "blogPosts", ":postId"],
              "variable": [
                {
                  "key": "postId",
                  "value": "post-id-here",
                  "description": "Firestore document ID"
                }
              ],
              "description": "Blog post'u günceller. Sadece gönderilen alanlar güncellenir (PATCH)."
            }
          },
          "response": []
        },
        {
          "name": "Delete Blog Post",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebaseIdToken}}"
              }
            ],
            "url": {
              "raw": "https://firestore.googleapis.com/v1/projects/{{firebaseProjectId}}/databases/(default)/documents/blogPosts/:postId",
              "protocol": "https",
              "host": ["firestore", "googleapis", "com"],
              "path": ["v1", "projects", "{{firebaseProjectId}}", "databases", "(default)", "documents", "blogPosts", ":postId"],
              "variable": [
                {
                  "key": "postId",
                  "value": "post-id-here",
                  "description": "Firestore document ID"
                }
              ],
              "description": "Blog post'u siler. Firestore security rules'a göre admin olman gerekir."
            }
          },
          "response": []
        }
      ]
    },
